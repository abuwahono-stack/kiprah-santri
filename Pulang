        <div class="comment-section">
            <h2>Tinggalkan Komentar</h2>
            <form id="comment-form">
                <textarea id="comment-textarea" placeholder="Tulis komentar Anda di sini..."></textarea>
                <button type="submit" id="comment-submit-btn">Kirim</button>
            </form>
            <div id="comments-list">
                <!-- Komentar akan ditambahkan di sini oleh JavaScript -->
            </div>
        </div>
