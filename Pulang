    <script>
        // JavaScript untuk fungsionalitas tombol
        document.addEventListener('DOMContentLoaded', function() {
            const storyTextElement = document.getElementById('story-text');
            const storyText = storyTextElement.innerText;

            // 1. Tombol Download
            const downloadBtn = document.getElementById('download-btn');
            downloadBtn.addEventListener('click', () => {
                const blob = new Blob([storyText], { type: 'text/plain' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = 'Pulang.txt';
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
                URL.revokeObjectURL(url);
            });

            // 2. Tombol Salin
            const copyBtn = document.getElementById('copy-btn');
            copyBtn.addEventListener('click', () => {
                navigator.clipboard.writeText(storyText).then(() => {
                    const originalText = copyBtn.innerHTML;
                    copyBtn.innerHTML = 'Tersalin!';
                    setTimeout(() => {
                        copyBtn.innerHTML = originalText;
                    }, 2000);
                }).catch(err => {
                    console.error('Gagal menyalin teks: ', err);
                    alert('Gagal menyalin teks.');
                });
            });

            // 3. Tombol Print
            const printBtn = document.getElementById('print-btn');
            printBtn.addEventListener('click', () => {
                window.print();
            });

            // 4. Tombol Like
            const likeBtn = document.getElementById('like-btn');
            const likeCount = document.getElementById('like-count');
            let likes = 0;
            let isLiked = false;
            likeBtn.addEventListener('click', () => {
                isLiked = !isLiked;
                likes += isLiked ? 1 : -1;
                likeCount.textContent = likes;
                likeBtn.classList.toggle('liked', isLiked);
            });

            // 5. Tombol Subscribe
            const subscribeBtn = document.getElementById('subscribe-btn');
            let isSubscribed = false;
            subscribeBtn.addEventListener('click', () => {
                isSubscribed = !isSubscribed;
                subscribeBtn.classList.toggle('subscribed', isSubscribed);
                if (isSubscribed) {
                    subscribeBtn.innerHTML = `<svg viewBox="0 0 24 24"><path d="M9 16.2L4.8 12l-1.4 1.4L9 19 21 7l-1.4-1.4L9 16.2z"/></svg> Subscribed`;
                } else {
                    subscribeBtn.innerHTML = `<svg viewBox="0 0 24 24"><path d="M20 8H4V6h16v2zm-2-6H6v2h12V2zm4 10v8c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2v-8c0-1.1.9-2 2-2h16c1.1 0 2 .9 2 2zm-6 4l-6-3.27v6.53L16 16z"/></svg> Subscribe`;
                }
            });

            // 6. Tombol Share
            const shareBtn = document.getElementById('share-btn');
            shareBtn.addEventListener('click', () => {
                if (navigator.share) {
                    navigator.share({
                        title: 'Pulang - Sebuah Perjalanan ke Dalam Diri',
                        text: 'Baca cerita inspiratif tentang perjalanan menemukan diri sendiri.',
                        url: window.location.href
                    }).catch(console.error);
                } else {
                    // Fallback untuk browser desktop
                    navigator.clipboard.writeText(window.location.href).then(() => {
                        alert('Tautan halaman telah disalin ke clipboard!');
                    });
                }
            });

            // 7. Area Komentar
            const commentForm = document.getElementById('comment-form');
            const commentTextarea = document.getElementById('comment-textarea');
            const commentsList = document.getElementById('comments-list');

            commentForm.addEventListener('submit', (e) => {
                e.preventDefault(); // Mencegah form dari reload halaman
                const commentText = commentTextarea.value.trim();
                
                if (commentText) {
                    const newComment = document.createElement('div');
                    newComment.classList.add('comment');
                    
                    const commentParagraph = document.createElement('p');
                    commentParagraph.textContent = commentText;
                    
                    newComment.appendChild(commentParagraph);
                    commentsList.prepend(newComment); // Menampilkan komentar baru di paling atas
                    
                    commentTextarea.value = ''; // Mengosongkan textarea
                }
            });
        });
    </script>

</body>
</html>
